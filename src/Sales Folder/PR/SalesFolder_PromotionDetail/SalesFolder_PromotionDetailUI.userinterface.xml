<UIDescription name="SalesFolder::PromotionDetailUI" schemaVersion="0.0.0.5" >
  <Page pagePattern="SingleSectionPage" cachable="false">
    <PageHeader titleBinding="ProcessContext::PageTitle" />
    <ViewVariables>
      <ViewVariable name="currentTabName" value="Attachments" />
    </ViewVariables>
    <Section sectionName="masterSection" sectionPattern="TabbedViewAreaSection" currentTab="ProcessContext::currentTabName">
      <Area areaName="tabArea" areaPattern="TabElementArea">
        <TabSelector name="TabSelector">
          <Items>
            <Tab tabName="Attachments" backendSystem="both">
              <Bindings>
                <Resource target="image" type="Image" id="ClipGrey24" defaultImage="ClipGrey24" bindingMode="ONE_TIME" />
                <Resource target="text" type="Label" id="AttachmentsId" defaultLabel="Attachments" bindingMode="ONE_TIME" />
                <Binding target="Info" binding="ProcessContext::SalesFolderPromotionDetail.LuAttachmentcount.salesFolderAttachmentCount" bindingMode="ONE_WAY" />
              </Bindings>
            </Tab>
          </Items>
          <Events>
            <ItemSelectedEvent event="tabSelected" storeTabNameIn="currentTabName" />
          </Events>
        </TabSelector>
      </Area>
