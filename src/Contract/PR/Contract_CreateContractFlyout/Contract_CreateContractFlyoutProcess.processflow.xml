          <Return name="dateFrom" value="ProcessContext::FlyoutBO.dateFrom" />
          <Return name="dateThru" value="ProcessContext::FlyoutBO.dateThru" />
          <Return name="buttonPressed" value="Event.buttonPressed" />
        </ReturnValues>
      </Action>
    </Actions>
  </Body>
</Process>