          <Input name="objectStatus" type="Literal" value="5" />
        </Parameters>
        <TransitionTo action="WizardValidation" />
      </Action>
      <Action actionType="VALIDATION" name="WizardValidation">
        <Validations>
          <Validation name="ProcessContext::FlyoutBO.validateNotEmpty" />
