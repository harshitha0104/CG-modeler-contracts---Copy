          <Input name="ReferenceUserPKey" type="Literal" value="#UserPKey#" />
        </Parameters>
        <ReturnValues>
          <Return name="ProcessContext::CustomerPKey" value="customerPKey" />
          <Return name="ProcessContext::SubstitutedUsrPKey" value="substitutedUsrPKey" />
